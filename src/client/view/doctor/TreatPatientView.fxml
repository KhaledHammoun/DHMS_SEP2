<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.doctor.TreatPatientViewController">
   <children>
      <TextField fx:id="medicationTextField" layoutX="34.0" layoutY="245.0" prefHeight="25.0" prefWidth="172.0" promptText="Medication" />
      <Label layoutX="67.0" layoutY="39.0" text="Select diagnosis">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <TableView fx:id="diagnosisTable" layoutX="33.0" layoutY="66.0" prefHeight="157.0" prefWidth="464.0">
        <columns>
          <TableColumn fx:id="diagnosisName" prefWidth="117.0" text="Name" />
          <TableColumn fx:id="diagnosisSeverity" prefWidth="160.0" text="Severity level" />
            <TableColumn fx:id="diagnosisDescription" prefWidth="184.0" text="Description" />
        </columns>
      </TableView>
      <Button layoutX="525.0" layoutY="327.0" mnemonicParsing="false" onAction="#onAddButton" text="Add" />
      <TextArea fx:id="descriptionTextArea" layoutX="33.0" layoutY="280.0" prefHeight="85.0" prefWidth="354.0" promptText="Description" wrapText="true" />
      <Button layoutX="426.0" layoutY="327.0" mnemonicParsing="false" onAction="#onBackButton" text="Back" />
      <Button layoutX="471.0" layoutY="327.0" mnemonicParsing="false" onAction="#onClearButton" text="Clear" />
   </children>
</AnchorPane>
